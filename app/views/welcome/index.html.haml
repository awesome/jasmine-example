%h1 Welcome

#users

#signup
  = form_tag "" do |f|
    .control-group
      .controls
        = text_field_tag :username, "", placeholder: "Username"
    .control-group
      .controls
        = text_field_tag :email, "", placeholder: "Email"
    .control-group
      .controls
        = password_field_tag :password, "", placeholder: "Password"
    .control-group
      .controls
        = password_field_tag :password_confirmation, "", placeholder: "Password confirmation"

    %div
      = submit_tag "Sign Up", class: "btn btn-success"

